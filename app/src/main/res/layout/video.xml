<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:paddingBottom="@dimen/row_spacing">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/torrent_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/result_title_size"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/row_spacing"
            android:background="#000000"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>

        <LinearLayout
            android:id="@+id/result_subtext_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/result_subtext_top_magin">

            <TextView
                android:id="@+id/torrent_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/result_subtext_left_margin"
                android:text="Category" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/text_divider_height"
                android:layout_marginLeft="@dimen/result_subtext_left_margin"
                android:background="#000000" />

            <TextView
                android:id="@+id/torrent_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/result_subtext_left_margin"
                android:text="Size" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/text_divider_height"
                android:layout_marginLeft="@dimen/result_subtext_left_margin"
                android:background="#000000" />

            <TextView
                android:id="@+id/torrent_seeds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/result_subtext_left_margin"
                android:text="Seeds" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/text_divider_height"
                android:layout_marginLeft="@dimen/result_subtext_left_margin"
                android:background="#000000" />

            <TextView
                android:id="@+id/torrent_leeches"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/result_subtext_left_margin"
                android:text="Leeches" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/row_spacing"
            android:background="#000000"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/icon_top_margin">

            <ImageView
                android:id="@+id/icon_magnet"
                android:layout_width="@dimen/icon_width"
                android:layout_height="@dimen/icon_height"
                android:layout_marginLeft="@dimen/icon_left_margin"
                app:srcCompat="@drawable/magnet_icon" />

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_marginLeft="@dimen/icon_left_margin"
                android:background="#000000"
                android:layout_gravity="center"/>

            <ImageView
                android:id="@+id/icon_url_link"
                android:layout_width="@dimen/icon_width"
                android:layout_height="@dimen/icon_height"
                android:layout_marginLeft="@dimen/icon_left_margin"
                app:srcCompat="@drawable/url_link_icon" />

            <View
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_marginLeft="@dimen/icon_left_margin"
                android:background="#000000"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/torrent_provider"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/icon_left_margin"
                android:gravity="center"
                android:text="Provider" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
