<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.baliyaan.android.imdbtor.MainActivity">
    <FrameLayout
        android:id="@+id/LoginFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></FrameLayout>
    <android.support.v7.widget.ListViewCompat
        android:id="@+id/Videos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/LoginFragmentContainer"
        android:background="@android:color/darker_gray"
        android:divider="@android:color/transparent"
        android:dividerHeight="@dimen/row_spacing" />
    <FrameLayout
        android:id="@+id/SearchResultsFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></FrameLayout>
</RelativeLayout>
