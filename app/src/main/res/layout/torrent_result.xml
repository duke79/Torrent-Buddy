<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/torrent_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/result_title_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/torrent_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/torrent_title"
        android:layout_marginLeft="@dimen/result_subtext_left_margin"
        android:layout_marginTop="@dimen/result_subtext_top_magin"
        android:text="Category" />

    <TextView
        android:id="@+id/torrent_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/torrent_category"
        android:layout_marginLeft="@dimen/result_subtext_left_margin"
        android:layout_toEndOf="@+id/torrent_category"
        android:layout_toRightOf="@+id/torrent_category"
        android:text="Size" />

    <TextView
        android:id="@+id/torrent_seeds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/torrent_size"
        android:layout_marginLeft="@dimen/result_subtext_left_margin"
        android:layout_toEndOf="@+id/torrent_size"
        android:layout_toRightOf="@+id/torrent_size"
        android:text="Seeds" />

    <TextView
        android:id="@+id/torrent_leeches"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/torrent_seeds"
        android:layout_marginLeft="@dimen/result_subtext_left_margin"
        android:layout_toEndOf="@+id/torrent_seeds"
        android:layout_toRightOf="@+id/torrent_seeds"
        android:text="Leeches" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/torrent_category"
        android:layout_marginTop="@dimen/icon_top_margin">

        <ImageView
            android:id="@+id/icon_magnet"
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_height"
            android:layout_marginLeft="@dimen/icon_left_margin"
            app:srcCompat="@drawable/magnet_icon" />

        <ImageView
            android:id="@+id/icon_url_link"
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_height"
            android:layout_marginLeft="@dimen/icon_left_margin"
            app:srcCompat="@drawable/url_link_icon" />

        <TextView
            android:id="@+id/torrent_provider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/icon_left_margin"
            android:text="Provider" />

    </LinearLayout>
</RelativeLayout>
